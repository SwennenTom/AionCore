{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "TradeBot": "Debug"
    }
  },
  "Switches": {
    "EnableWebsocket": false
  },
  "ConnectionStrings": {
    "DatabaseConnection": "Data Source=AionBotDb.db"
  },
  "TimeIntervals": {
    "AvailableIntervals": [ "1m", "5m", "15m", "1h", "4h", "1d" ],
    "IndicatorPeriods": {
      "EMA": [ 7, 21, 50 ],
      "RSI": [ 14 ],
      "ATR": [ 14 ]
    }
  },
  "RiskManagement": {
    "MaxPortfolioRiskPerTrade": 0.02,
    "StopLossPercentage": 0.05,
    "TakeProfitRatio": 2.0
  },
  "IndicatorParameters": {
    "EMA": {
      "ShortPeriod": 7,
      "MediumPeriod": 21,
      "LongPeriod": 50,
      "EMARatioUpperThreshold": 0.015,
      "EMARatioLowerThreshold": 0.0005
    },
    "RSI": {
      "Period": 14,
      "OverboughtThreshold": 70,
      "OversoldThreshold": 30
    },
    "ATR": {
      "Period": 14,
      "Threshold": 3.0,
      "LowerBoundFactor": 10,

      "ChangeFactorUpperThreshold": 0.2,
      "ChangeFactorIncrease": 1.1,
      "ChangeFactorDecrease": 0.9,

      "VolumeRatioHigh": 1.5,
      "VolumeFactorHigh": 1.15,
      "VolumeRatioMedium": 1.0,
      "VolumeFactorMedium": 1.0,
      "VolumeRatioLow": 0.7,
      "VolumeFactorLow": 0.85,
      "VolumeFactorVeryLow": 0.7
    }
  },
  "BinanceExchange": {
    "EURPairs": [
      "BTCEUR",
      "ETHEUR"
    ],
    "EURPairsFULL": [
      "BTCEUR",
      "ETHEUR",
      "SOLEUR",
      "ADAEUR",
      "DOTEUR",
      "XRPEUR",
      "LINKEUR",
      "BNBEUR",
      "AVAXEUR"
    ]
  }
}
