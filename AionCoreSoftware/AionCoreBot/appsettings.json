{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "TradeBot": "Debug"
    }
  },
  "ConnectionStrings": {
    "DatabaseConnection": "Data Source=AionBotDb.db"
  },
  "TimeIntervals": {
    "AvailableIntervals": [ "1m", "5m", "15m", "1h", "4h", "1d" ],
    "IndicatorPeriods": {
      "EMA": [ 7, 21, 50 ],
      "RSI": [ 14 ],
      "ATR": [ 14 ]
    }

  },
  "RiskManagement": {
    "MaxPortfolioRiskPerTrade": 0.02,
    "StopLossPercentage": 0.05,
    "TakeProfitRatio": 2.0
  },
  "IndicatorParameters": {
    "EMA": {
      "ShortPeriod": 7,
      "MediumPeriod": 21,
      "LongPeriod": 50,
      "EMARatioUpperLimit": 5.0
    },
    "RSI": {
      "Period": 14,
      "OverboughtThreshold": 70,
      "OversoldThreshold": 30
    },
    "ATR": {
      "Period": 14,
      "Threshold": 3.0,
      "LowerBoundFactor": 10
    }
  },
  // Tijdelijk de pairs gedupliceerd voor debugging redenen
  "BinanceExchange": {
    "EURPairs": [
      "BTCEUR",
      "ETHEUR"
    ],
    "EURPairsFULL": [
      "BTCEUR",
      "ETHEUR",
      "SOLEUR",
      "ADAEUR",
      "DOTEUR",
      "XRPEUR",
      "LINKEUR",
      "BNBEUR",
      "AVAXEUR"
    ]
  }
}